<UserControl x:Class="AnyTrack.Projects.Views.ProductBacklog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xml:lang="en-GB"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" Width="500" Height="364.328">

    <GroupBox HorizontalAlignment="Stretch"  Margin="0, 0, 0, 0" >
        <GroupBox.Header>
            <TextBlock Foreground="White" Text="Product Backlog" />
        </GroupBox.Header>
        <Grid Background="White" Margin="2,0,-2,-5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="0*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
            </Grid.RowDefinitions>
            <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,91,0,10" Width="468"/>
            <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="96,49,0,0" VerticalAlignment="Top" Width="159" Height="26" ItemsSource="{Binding ProjectName}"/>
            <Label x:Name="label" Content="Select Project" HorizontalAlignment="Left" Margin="10,49,0,0" VerticalAlignment="Top" Height="26" Width="81"/>
            <Button x:Name="button" Content="Search" HorizontalAlignment="Left" Margin="260,50,0,0" VerticalAlignment="Top" Width="75" Height="25"/>
            <Button x:Name="button1" Content="+" HorizontalAlignment="Left" Margin="458,9,0,0" VerticalAlignment="Top" Width="22" Height="25"/>
            <Label x:Name="label1" Content="New Story" HorizontalAlignment="Left" Margin="389,9,0,0" VerticalAlignment="Top" Height="26" Width="64"/>
        </Grid>
    </GroupBox>
</UserControl>
