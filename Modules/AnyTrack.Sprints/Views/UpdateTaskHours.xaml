<UserControl x:Class="AnyTrack.Sprints.Views.UpdateTaskHours"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xml:lang="en-GB"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" Width="auto" Height="auto" d:DesignWidth="570" d:DesignHeight="357">

    <GroupBox HorizontalAlignment="Stretch"  Margin="0, 0, 0, 0" >
        <GroupBox.Header>
            <TextBlock Foreground="White" Text="Update Task Hours" />
        </GroupBox.Header>
        <Grid Background="White" Margin="2,0,-2,-5">
            <ListBox HorizontalAlignment="Left" Height="194" Margin="78,51,0,0" VerticalAlignment="Top" Width="400">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width ="Auto"></ColumnDefinition>
                                <ColumnDefinition Width ="Auto"></ColumnDefinition>
                                <ColumnDefinition Width ="Auto" ></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="{Binding Summary}" HorizontalAlignment="Left"></Label>
                            <TextBox Grid.Column="1" Text="{Binding LogHours}" controls:TextBoxHelper.ClearTextButton="True"/>
                            <TextBox Grid.Column="2" Text="{Binding UpdateEstimate}" controls:TextBoxHelper.ClearTextButton="True"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>
    </GroupBox>
</UserControl>
