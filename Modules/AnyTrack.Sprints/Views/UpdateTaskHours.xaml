<UserControl x:Class="AnyTrack.Sprints.Views.UpdateTaskHours"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:sys="clr-namespace:System;assembly=mscorlib"
             xml:lang="en-GB"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d">

    <GroupBox HorizontalAlignment="Stretch"  Margin="0, 0, 0, 0" >
        <GroupBox.Header>
            <TextBlock Foreground="White" Text="Update Task Hours" />
        </GroupBox.Header>
        <Grid Background="White" Margin="2,0,-2,-5">
            <ListBox HorizontalAlignment="Left" Height="194" ItemsSource="{Binding Tasks}" Margin="78,51,0,0" VerticalAlignment="Top" Width="400">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width ="8*"></ColumnDefinition>
                                <ColumnDefinition Width ="1*"></ColumnDefinition>
                                <ColumnDefinition Width ="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Content="{Binding Description}" HorizontalAlignment="Left"></Label>
                            <Label Grid.Column="1" Content="{Binding TaskHourEstimates[0].Estimate}" controls:TextBoxHelper.ClearTextButton="True"/>
                            <TextBox Grid.Column="2" Text="{Binding TaskHourEstimates[0].NewEstimate}" controls:TextBoxHelper.ClearTextButton="True"/>
                        </Grid>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            <Button Content="Update Tasks" HorizontalAlignment="Left" Margin="329,291,0,0" VerticalAlignment="Top" Width="81" Command="{Binding UpdateTaskHoursCommand}"/>
            <Button Content="Cancel" HorizontalAlignment="Left" Margin="430,291,0,0" VerticalAlignment="Top" Width="75" Command="{Binding CancelCommand}" />
        </Grid>
    </GroupBox>
</UserControl>
