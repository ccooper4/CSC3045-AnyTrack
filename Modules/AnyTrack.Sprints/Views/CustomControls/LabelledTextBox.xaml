<UserControl x:Class="AnyTrack.Sprints.Views.CustomControls.LabelledTextBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnyTrack.Sprints.Views.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="Root" >
        <Grid.RowDefinitions>
            <RowDefinition MinHeight="30" Height="1*"></RowDefinition>
            <RowDefinition MinHeight="30" Height="99*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Content="{Binding Label}" HorizontalAlignment="Left" VerticalAlignment="Bottom" FontWeight="Bold"/>
        <TextBox Grid.Row="1" Text="{Binding Text}"/>
    </Grid>
</UserControl>
