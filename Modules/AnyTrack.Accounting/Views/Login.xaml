<Window x:Class="AnyTrack.Accounting.Views.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Login" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="EmailLabel" Content="Email Address&#xD;&#xA;" HorizontalAlignment="Left" Margin="40,35,0,0" VerticalAlignment="Top" Height="27" Width="84" Grid.ColumnSpan="2"/>
        <Label x:Name="PasswordLabel" Content="Password&#xA;" HorizontalAlignment="Left" Margin="40,63,0,0" VerticalAlignment="Top" Height="27" Width="60" Grid.ColumnSpan="2" Grid.Column="0" />
        <TextBox x:Name="EmailTextBox" HorizontalAlignment="Left" Height="23" Margin="85,35,0,0" TextWrapping="Wrap" Text="{}" VerticalAlignment="Top" Width="202" Grid.Column="1"/>
        <TextBox x:Name="PasswordTextBox" HorizontalAlignment="Left" Height="23" Margin="85,67,0,0" TextWrapping="Wrap" Text="{}" VerticalAlignment="Top" Width="202" Grid.Column="1"/>
        <Button x:Name="LoginButton" Content="Login" HorizontalAlignment="Left" Margin="134,123,0,0" VerticalAlignment="Top" Width="75" Height="20" Grid.Column="1"/>
        <Label x:Name="ForgotPassLabel" Content="Forgot Password?&#xD;&#xA;" HorizontalAlignment="Left" Margin="184,93,0,0" VerticalAlignment="Top" Grid.Column="1"/>
        <Label x:Name="SignUpLabel" Content="Sign Up&#xD;&#xA;" HorizontalAlignment="Left" Margin="261,140,0,-13" VerticalAlignment="Top" Grid.Column="1"/>
        <Label x:Name="OfflineLabel" Content="Offline Mode&#xD;&#xA;" HorizontalAlignment="Left" Margin="40,140,0,-13" VerticalAlignment="Top" Grid.ColumnSpan="2"/>

    </Grid>
</Window>