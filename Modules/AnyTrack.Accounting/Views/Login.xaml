<UserControl x:Class="AnyTrack.Accounting.Views.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnyTrack.Accounting.Views"
             xmlns:prism="http://www.codeplex.com/prism"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="600">

    <Grid Background="LightGray" Margin="0,0,0,-135">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.75*" />
            <ColumnDefinition Width="5*" MaxWidth="600px"/>
            <ColumnDefinition Width="1.75*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Column="1" Grid.Row="0" Header="Login" HorizontalAlignment="Stretch" Margin="0, 30px, 0, 10px" >
            <Grid Background="White" Margin="0,0,0,-5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"></ColumnDefinition>
                    <ColumnDefinition Width="4*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>

                <Label Grid.Column="0" Grid.Row="0" Name="EmailLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="10px" >Email Address:</Label>
                <TextBox Name="EmailTextbox" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" Text="{Binding Email}"/>

                <Label Grid.Column="0" Grid.Row="1" Name="PasswordLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="10px" >Password:</Label>
                <TextBox Name="PasswordTextbox" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center" Text="{Binding Password}"/>

                <Label Grid.Column="1" Grid.Row="3" Name="ForgotPasswordLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="10px" >Forgot Password?</Label>

                <WrapPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center" Width="131" Margin="29,0,10,0" Grid.Column="1">
                    <Button Margin="10px, 0, 0, 10" Command="{Binding LoginUserCommand}" Content="Login" Width="45" Height="24"/>
                </WrapPanel>

            </Grid>
        </GroupBox>
        <WrapPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" Width="97" Margin="10,0,0,0">
            <Button x:Name="OfflineButton" VerticalAlignment="Center" HorizontalAlignment="Left" Padding="10px" Content="Offline Mode" BorderThickness="0" Background="LightGray" Command="{Binding OfflineModeCommand}" />
        </WrapPanel>

        <WrapPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Width="91" Grid.Row="1">
            <Button x:Name="RegistrationButton" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="10px" Content="Sign Up" Width="70" BorderThickness="0" Background="LightGray" Command="{Binding SignUpCommand}"/>
        </WrapPanel>
    </Grid>
</UserControl>
