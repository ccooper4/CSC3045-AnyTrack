<UserControl x:Class="AnyTrack.Accounting.Views.Registration"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AnyTrack.Accounting.Views"
             xmlns:prism="http://www.codeplex.com/prism"
             xmlns:atph="clr-namespace:AnyTrack.Accounting.Controls"
             xmlns:Views="clr-namespace:AnyTrack.Client.CustomControls"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="600">

    <Grid Background="LightGray" Margin="0,0,0,-210">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1.75*" />
            <ColumnDefinition Width="6.75*" MaxWidth="600px"/>
            <ColumnDefinition Width="1.75*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>


        <GroupBox Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" Margin="0, 30px, 0, 10px" >
            <GroupBox.Header>
                <TextBlock Foreground="White" Text="Registration" />
            </GroupBox.Header>
            <Grid Background="White">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0*"></ColumnDefinition>
                    <ColumnDefinition Width="6*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
       
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition ></RowDefinition>
                </Grid.RowDefinitions>

                <Views:LabelledTextBox Label="Email Address*:" Text="{Binding Email}" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center"/>

                <Views:LabelledTextBox Label="First Name*:" Text="{Binding FirstName}" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"/>

                <Views:LabelledTextBox Label="Last Name*:" Text="{Binding LastName}" Grid.Column="1" Grid.Row="2" VerticalAlignment="Center"/>

                <Grid Grid.Column="1" Grid.Row="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" SharedSizeGroup="Labels"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Label  Grid.Column="0" Name="PasswordLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="10px" >Password*:</Label>
                    <PasswordBox  Grid.Column="1" VerticalAlignment="Center" atph:PasswordBoxBindingHelper.EnablePasswordBoxBinding="true" atph:PasswordBoxBindingHelper.Binding="{Binding Path=Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Grid Grid.Column="1" Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" SharedSizeGroup="Labels"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Name="ConfirmPasswordLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="10px" >Confirm Password:</Label>
                    <PasswordBox Grid.Column="1" VerticalAlignment="Center" atph:PasswordBoxBindingHelper.EnablePasswordBoxBinding="true"  atph:PasswordBoxBindingHelper.Binding="{Binding Path=ConfirmPassword, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </Grid>

                <Grid Grid.Column="1" Grid.Row="5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" SharedSizeGroup="Labels"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Name="RolesLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="10px" >Roles:</Label>
                    <CheckBox Grid.Column="1" Grid.Row="0" Name="ProductOwnerCheckbox" Content="Product Owner" HorizontalAlignment="Left" VerticalAlignment="Center" Padding="10px" IsChecked="{Binding ProductOwner}"/>
                    <CheckBox Grid.Column="1" Grid.Row="1" Name="ScrumMasterCheckbox" Content="Scrum Master" HorizontalAlignment="Left"  VerticalAlignment="Center" Padding="10px" IsChecked="{Binding ScrumMaster}"/>
                    <CheckBox Grid.Column="1" Grid.Row="2" Name="DeveloperCheckbox" Content="Developer" HorizontalAlignment="Left"  VerticalAlignment="Center" Padding="10px" IsChecked="{Binding Developer}"/>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="6">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" SharedSizeGroup="Labels"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Name="SkillSetLabel" VerticalAlignment="Top" HorizontalAlignment="Right" Padding="10px" >Skill Set:</Label>
                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Column="1">
                        <DockPanel>
                            <Button Content="Add" DockPanel.Dock="Right" Command="{Binding AddSkillCommand}" BorderThickness="0" Background="LightGray" Margin="10px,0,0,0" Height="4"/>
                            <TextBox DockPanel.Dock="Left" HorizontalAlignment="Stretch" Text="{Binding CurrentSkill, UpdateSourceTrigger=PropertyChanged}"/>
                        </DockPanel>

                        <ListBox ItemsSource="{Binding Skills}" Padding="0,0,0,0" Margin="0,10px,0,0" BorderThickness="0">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Label Content="{Binding Path=.}"></Label>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="1" Grid.Row="7">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*" SharedSizeGroup="Labels"/>
                        <ColumnDefinition Width="6*"/>
                    </Grid.ColumnDefinitions>
                    <Label Grid.Column="0" Name="SecretQuestionLabel" VerticalAlignment="Center" HorizontalAlignment="Right" Padding="10px" >Secret Question:</Label>
                    <ComboBox Grid.Column="1" ItemsSource="{Binding SecretQuestions}" SelectedValuePath="." SelectedValue="{Binding SecretQuestion}" Height="5" VerticalAlignment="Center" />
                </Grid>

                <Views:LabelledTextBox Label="Secret Answer:" Text="{Binding SecretAnswer}" Grid.Column="1" Grid.Row="8" VerticalAlignment="Center"/>
                
            </Grid>
        </GroupBox>
        <WrapPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Margin="10px, 0, 0, 0" Command="{Binding CancelRegisterUserCommand}" BorderThickness="0" Background="LightGray">Cancel</Button>
            <Button Margin="10px, 0, 0, 0" Command="{Binding RegisterUserCommand}" BorderThickness="0" Background="LightGray" >Register</Button>
        </WrapPanel>
    </Grid>
</UserControl>
