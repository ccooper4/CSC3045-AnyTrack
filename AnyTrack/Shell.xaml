<Controls:MetroWindow x:Class="AnyTrack.Client.Shell"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Controls="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
        xmlns:prism="http://www.codeplex.com/prism"
        xmlns:infrastructure="clr-namespace:AnyTrack.Infrastructure;assembly=AnyTrack.Infrastructure"
        Title="AnyTrack" Height="600" Width="1200" BorderBrush="Gray">
    <DockPanel LastChildFill="True">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal">
            <Label Content="Test" Padding="10px"></Label>
        </StackPanel>
            <Grid DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="9*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <ContentControl Grid.Row="0" Grid.Column="1" prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.MainRegion}" Background="Gray"/>
                <ContentControl Grid.Row="0" Grid.Column="0" prism:RegionManager.RegionName="{x:Static infrastructure:RegionNames.SideRegion}"/>
        </Grid>

    </DockPanel>
</Controls:MetroWindow>
